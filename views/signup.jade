doctype html
html
  head
    meta(charset="utf-8")
    title= 'iloominate: Storybook App'

    // 3rd party libraries
    link(href="/bootstrap.min.css", rel="stylesheet", type="text/css")

    // custom style
    link(href="/main.css", rel="stylesheet", type="text/css")

  body
    include partials/main_menu

    div.container
      .row
        h1
          span.fa.fa-sign-in
          span.translate Sign up
        if message.length
          div.alert.alert-danger #{message}

      .row
        .col-md-6
          h3 Welcome to iLoominate!
          p Create your user account.
          p You can also add yourself to a team.

        .col-md-6
          form.well(action="/signup", method="post")
            .form-group
              label.translate Email
              input.form-control(type="text", name="email")
            .form-group
              label.translate Password
              input.form-control(type="password", name="password")
            .form-group
              label
                span.translate Team
                span.translate (Optional)
              input.form-control(type="text", name="team")
            button.btn.btn-warning.translate(type="submit")= 'Sign up'

    // 3rd party libraries
    script(type="text/javascript", src="/jquery-1.11.0.min.js")
    script(type="text/javascript", src="/bootstrap.min.js")
    script(type="text/javascript", src="/polyglot.min.js")

    include partials/translate_page

    include partials/analytics
