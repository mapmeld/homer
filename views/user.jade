doctype html
html
  head
    meta(charset="utf-8")
    title= 'iloominate: Storybook App'

    // 3rd party libraries
    link(href="/bootstrap.min.css", rel="stylesheet", type="text/css")

    // custom style
    link(href="/main.css", rel="stylesheet", type="text/css")

  body
    include partials/main_menu

    div.container
      .row
        h1 User Page
      .row
        .span6
          .well
            h3 Test User
            ul
              li ID #{user._id}
            br
            h3 Books
            ul
              for book in books
                li
                  h4 #{book.name}
                  a.btn.translate(href="/book/#{book._id}") View
                  a.btn.translate(href="/edit?id={book._id}") Edit

    // 3rd party libraries
    script(type="text/javascript", src="/jquery-1.11.0.min.js")

    script(type="text/javascript", src="/polyglot.min.js")

    include partials/translate_page

    include partials/analytics
