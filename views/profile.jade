doctype html
html
  head
    meta(charset="utf-8")
    title= 'iloominate: Storybook App'

    // 3rd party libraries
    link(href="/bootstrap.min.css", rel="stylesheet", type="text/css")

    // custom style
    link(href="/main.css", rel="stylesheet", type="text/css")

  body
    div.container
      .row-fluid
        h1 Profile Page
        a.btn.btn-default(href="/logout") Log Out
      .row-fluid
        .span6
          .well
            h3 Test User
            ul
              li ID #{user._id}
              li email #{user.local.email}

            h3.translate Team
            ul
              for team in user.teams
                if user.admin
                  li
                    span #{team}&nbsp;&nbsp;&nbsp;
                    a(href="/team/#{team}/manage")
                      span (
                      span.translate leader
                      span )
                else
                  li #{team}

            h4.translate Join team
            form(action="/teams/join", method="POST")
              input(type='hidden', name='_csrf', value=token)
              input.translate(type="input", name="teamname" placeholder="Team name")
              input.btn.btn-success.translate(type="submit" value="Ask to Join")

            h4.translate Lead new team
            form(action="/teams/create", method="POST")
              input(type='hidden', name='_csrf', value=token)
              input.translate(type="input", name="teamname" placeholder="Team name")
              input.btn.btn-success.translate(type="submit" value="Create")

    // 3rd party libraries
    script(type="text/javascript", src="/jquery-1.11.0.min.js")

    script(type="text/javascript", src="/polyglot.min.js")

    // custom script
    script(type="text/javascript") var translations = !{translations};
    script(type="text/javascript")
      != 'var outOfChromeApp = true;'
    script(type="text/javascript", src="/localize.js")
